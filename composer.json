{
    "name": "beyondit/opencart-extension-installer",
    "description": "Custom Composer Installer for installing OpenCart Extensions",
    "type": "composer-plugin",
    "require": {
        "composer-plugin-api": "^1.0|^2.0",
        "opencart/opencart": ">=2.2 <2.3"
    },
    "license": "GPL 3.0",
    "authors": [
      {
        "name": "Stefan Huber",
        "email": "stefan.huber@beyondit.at"
      },
      {
        "name": "Marcel S. Henselin",
        "email": "marcel@henselin.net"
      }
    ],
    "autoload": {
        "psr-4": { "BeyondIT\\Composer\\": "src/BeyondIT/Composer" }
    },
    "extra": {
        "class": "BeyondIT\\Composer\\OpenCartExtensionInstallerPlugin"
    },
    "require-dev": {
      "roave/security-advisories": "dev-master",
      "composer/composer": "^2" ,
      "phpunit/phpunit": "~9"
    }
}
